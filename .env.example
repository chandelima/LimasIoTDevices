# Host Port Configuration
HOST_PORT=8080

# PostgreSQL Database Connection
# Replace with your actual database credentials
DB_CONNECTION_STRING=Host=localhost;Database=limasiot;Username=limasiot;Password=your_secure_password

# Home Assistant Configuration
# Replace with your Home Assistant instance URL and long-lived access token
HOME_ASSISTANT_HOST_URL=http://localhost:8123
HOME_ASSISTANT_TOKEN=your-long-lived-access-token

# Device Event Configuration
# Debounce time in milliseconds to prevent duplicate events
DEVICE_EVENT_DEBOUNCE_MILLISECONDS=3000
